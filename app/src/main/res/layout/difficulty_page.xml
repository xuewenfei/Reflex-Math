<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"></LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/diff1Toggle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:textOff="EASY"
            android:textOn="EASY"
            android:onClick="changeDifficulty"
            android:textSize="30sp"
            android:soundEffectsEnabled="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/diff2Toggle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:textOff="INTERMEDIATE"
            android:textOn="INTERMEDIATE"
            android:onClick="changeDifficulty"
            android:soundEffectsEnabled="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/diff3Toggle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:textOff="CHALLENGING"
            android:textOn="CHALLENGING"
            android:onClick="changeDifficulty"
            android:soundEffectsEnabled="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/diff4Toggle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:textOff="ADVANCED"
            android:textOn="ADVANCED"
            android:onClick="changeDifficulty"
            android:soundEffectsEnabled="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/diff5Toggle"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:textOff="EXTREME"
            android:textOn="EXTREME"
            android:onClick="changeDifficulty"
            android:soundEffectsEnabled="false" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="fill_parent">

        <Button
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diffcultyBack"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:onClick="backToSettings"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:soundEffectsEnabled="false" />

        <Button
            android:text="START"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startGameBtn"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:onClick="startGame"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_blue_dark"
            android:soundEffectsEnabled="false" />
    </LinearLayout>

</LinearLayout>